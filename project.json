{
  "id": "RaFT",
  "type": "template",
  "value": {
    "author": "Sander Mertens and Raysan5",
    "description": "A template including both Raylib and Flecs!",
    "use": ["flecs"],
    "standalone": true
  },
  "lang.c": {
    "include": ["."],
    "${os linux}": {
      "lib": [
        "rt",
        "pthread",
        "m",
        "GL",
        "X11",
        "Xi",
        "Xcursor",
        "dl",
        "raylib"
      ]
    },
    "${os windows}": {
      "static-lib": ["raylibdll", "gdi32", "opengl32", "winmm"],
      "defines": ["_WINDOWS", "_USRDLL", "CGLM_EXPORTS", "CGLM_DLL"]
    },
    "${os darwin}": {
      "lib": ["raylib", "pthread"],
      "ldflags": [
        "-framework Cocoa",
        "-framework CoreVideo",
        "-framework IOKit",
        "-framework GLUT",
        "-framework OpenGL"
      ]
    },
    "${cfg sanitize}": {
      "defines": ["FLECS_SANITIZE"]
    },
    "${target em}": {
      "embed": ["assets"],
      "lib": ["raylibweb"],
      "ldflags": [
        "-s USE_GLFW=3",
        "-s ASYNCIFY",
        "-s FORCE_FILESYSTEM=1",
        "-s EXPORTED_FUNCTIONS=['_free','_malloc','_main']",
        "-s EXPORTED_RUNTIME_METHODS=ccall",
        "-s ALLOW_MEMORY_GROWTH=1",
        "-s STACK_SIZE=1073741824"
      ]
    }
  }
}
